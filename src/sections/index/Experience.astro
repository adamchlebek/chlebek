---
import WorkCard from "@/components/WorkCard.astro";
import { getWorkCardsData } from "@/lib/getContent";
import type { WorkCardDTO } from "@/shared/WorkCardDTO";

const workCardsData: WorkCardDTO[] = await getWorkCardsData();
---

<div class="w-full bg-gray-100">
  <div class="px-6 pt-24 text-center">
    <p class="text-4xl font-bold uppercase">Work Experience</p>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mt-4 p-12">
    {
      workCardsData?.map((workCardData) => (
        <div class="p-2">
          <WorkCard {...workCardData} />
        </div>
      ))
    }
  </div>
</div>
