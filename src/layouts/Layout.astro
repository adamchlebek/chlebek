---
import Navbar from "./Navbar.astro";
import "@/styles/global.css";
import "@fontsource-variable/overpass";
import Footer from "./Footer.astro";
import { SEO } from "astro-seo";
interface Props {
  subpage?: string;
}

const { subpage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content="{Astro.generator}" />
    <title>Adam Chlebek {subpage ? "-" + subpage : ""}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
  <SEO
    title="Adam Chlebek"
    description="Adam Chlebek's Personal Portfolio Website"
    canonical="https://adamchlebek.com"
    openGraph={{
      basic: {
        title: "Adam Chlebek - Personal Portfolio",
        type: "website",
        image: "https://adamchlebek.com/favicon.svg",
      },
    }}
    extend={{
      link: [
        {
          rel: "icon",
          href: "/favicon.svg",
        },
      ],
    }}
  />
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    background: #111827;
  }
  body {
    font-family: "Overpass Variable", sans-serif;
  }
</style>
