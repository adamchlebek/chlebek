---
import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Icon } from "astro-icon/components";
interface Props {
  icon?: string;
  title: string;
  subtext: string;
}

const { icon, title, subtext } = Astro.props;
---

<Card className="w-[200px]">
  <CardHeader>
    <CardDescription>
      <Icon name={"mdi:" + icon} class="w-8 h-8 text-blue-300" />
    </CardDescription>
    <CardTitle className="pt-2">{title}</CardTitle>
    <CardDescription className="pt-2">{subtext}</CardDescription>
  </CardHeader>
</Card>
