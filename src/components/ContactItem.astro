---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  subheader?: string;
  icon?: string;
}

const { title, subheader, icon } = Astro.props;
---

<div class="flex items-center gap-x-4 my-6">
  <Icon
    name={`mdi:${icon}`}
    class="text-blue-400 w-8 h-8 flex-shrink-0 flex-grow-0"
  />
  <div class="text-left">
    <p class="font-bold text-xl">{title}</p>
    <p class="text-sm">{subheader}</p>
  </div>
</div>
